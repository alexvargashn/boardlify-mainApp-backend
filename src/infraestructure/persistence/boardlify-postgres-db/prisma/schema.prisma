generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId  String @id @default(cuid()) @map("user_id")
  name     String @db.VarChar
  username String @db.VarChar @unique
  email    String @db.VarChar @unique
  password String @db.VarChar
  person Person @relation( fields: [personId], references: [personId])
  personId String @unique

  @@map("user")
}

model Person {
  personId String @id @default(uuid()) @map("person_id")
  firstName String @db.VarChar() @map("first_name")
  lastName String @db.VarChar() @map("last_name")
  genre String @db.Char()
  user User?
  @@map("person")
}
